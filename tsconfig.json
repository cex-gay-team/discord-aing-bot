{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@validators/*": [
                "./validators/*"
            ],
            "@commands/*": [
                "./commands/*"
            ],
            "@core/*": [
                "./core/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@errors/*": [
                "./errors/*"
            ],
            "*": [
                "./node_modules/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
